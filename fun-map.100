/* fun-map.100 */
/* Function that applies functions on characters of a string */

int main()
{
  char *s;

  s = getstring(100);
  s = map(toUpper,s);
  s = map(showSpace,s);
  putstring(s);
  return 0;
}

char *map(char f(), *s)
{
  int i;

  i=0;
  while (0<s[i]) {
    s[i] = f(s[i]);
    i = i+1;
  }
  return s;
}

char toUpper(char c)
{
  if ((c<'a') + ('z'<c)) return c;
  else return c-32;
}

char showSpace(char c)
{
  if (c==' ') return '_';
  return c;
}


    